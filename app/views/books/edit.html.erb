<h2 class="edithead">Editing Book</h2>

<div class="errormessage">
  <% if @list.errors.any? %>
    <%= @list.errors.count %> errors prohibited this book from being saved:
    <ul>
      <% @list.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
</div>

<%= form_with model: @list, url: book_path(@list.id), method: :patch do |f| %>
  <div class="databox">
    <label>Title</label>
    <div>
      <%= f.text_field :title %>
    </div>
  </div>

  <div class="databox">
    <label>Body</label>
    <div>
      <%= f.text_area :body %>
    </div>
  </div>

  <div>
    <%= f.submit 'Update Book' %>
  </div>
<% end %>

<div class="show-bottom">
  <%= link_to "Show", book_path(@list.id) %>
  <p>&nbsp;|&nbsp;</p>
  <%= link_to "Back", '/books' %>
</div>