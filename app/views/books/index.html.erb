<h1 class="headline">Books</h1>

<table class="table-all">
  <tr class="table-head">
    <th>Title</th>
    <th>Body</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <% @lists.each do |book| %>
    <tr>
      <td class="table-data"><%= book.title %></td>
      <td class="table-data"><%= book.body %></td>
      <td class="table-data"><%= link_to 'Show', book_path(book.id) %></td>
      <td class="table-data"><%= link_to 'Edit', edit_book_path(book.id) %></td>
      <td class="table-data"><%= link_to 'Destroy', book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
    </tr>
  <% end %>
</table>

<h3 class="new">New book</h3>

<div class="errormessage">
  <% if @list.errors.any? %>
    <%= @list.errors.count %> errors prohibited this book from being saved:
    <ul>
      <% @list.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
</div>

<%= form_with model: @list, url: '/books', method: :post do |f| %>
  <div class="databox">
    <label>Title</label>
    <div>
      <%= f.text_field :title %>
    </div>
  </div>

  <div class="databox">
    <label>Body</label>
    <div>
      <%= f.text_area :body %>
    </div>
  </div>

  <div>
    <%= f.submit 'Create Book' %>
  </div>
<% end %>
