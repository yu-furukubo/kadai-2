<h2>Books</h2>

<% @lists.each do |book| %>
  <p>Title</p>
  <span><%= book.title %></span>

  <p>Body</p>
  <span><%= book.body %></span>

  <span><%= link_to 'Show', book_path(book.id) %></span>
  <span><%= link_to 'Edit', edit_book_path(book.id) %></span>
  <span><%= link_to 'Delete', book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></span>

<% end %>


<h3>New book</h3>

<% if @list.errors.any? %>
  <%= @list.errors.count %> errors prohibited this book from being saved:
  <ul>
    <% @list.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @list, url: '/books', method: :post do |f| %>
  <p>Title</p>
  <%= f.text_field :title %>

  <p>Body</p>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>
